<Alloy>
    <Window id="userWin" title="User Setting" tabBarHidden="true" layout="vertical">
        <View layout="vertical" left="20dp" right="20dp">
            <View id="cloudStatusBar" layout="vertical" left="10dp">
                <View layout="horizontal">
                    <Label text="L('lbl.username') + L('', ':')" />
                    <Label id="lblUsername" left="10dp" />
                </View>
            </View>
            
            <View layout="vertical" top="50%">
                <View>
                    <Button id="btnTwitterLogin" title="L('btn.twitterLogin')" />
                    <Button id="btnLogout" title="L('btn.logout')" />
                </View>
                <Button id="btnClose" title="L('btn.close')" />
            </View>
        </View>
    </Window>
</Alloy>